<?xml version="1.0" encoding="UTF-8"?>
<project name="t3blog_commit" default="build" basedir="./../../">
	<target name="build" depends="checkout" />

	<property name="project.home" value="/var/www/aoestart/" />
	<property name="project.environment" value="latest" />

	<target name="checkout">
		<exec executable="svn" dir="${project.home}${project.environment}/htdocs/typo3conf/ext/aoestart_base" failonerror="true" >
			<arg value="up" />
			<arg value="--quiet" />
			<arg value="--force" />
			<arg value="https://svn.aoesupport.com/repository/extensions/projects/aoestart/aoestart_base/trunk/" />
			<arg value="./" />
		</exec>

		<exec executable="svn" dir="${project.home}${project.environment}/htdocs/typo3conf/ext/aoestart_configuration" failonerror="true" >
			<arg value="up" />
			<arg value="--quiet" />
			<arg value="--force" />
			<arg value="https://svn.aoesupport.com/repository/extensions/projects/aoestart/aoestart_configuration/trunk/" />
			<arg value="./" />
		</exec>

		<exec executable="svn" dir="${project.home}${project.environment}/htdocs/typo3conf/ext/aoestart_template" failonerror="true" >
			<arg value="up" />
			<arg value="--quiet" />
			<arg value="--force" />
			<arg value="https://svn.aoesupport.com/repository/extensions/projects/aoestart/aoestart_template/trunk/" />
			<arg value="./" />
		</exec>
	</target>
</project>
